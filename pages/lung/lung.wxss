/* pages/blood/blood.wxss */
.container {
  min-height: 100vh;
  background: #f4f4f4;
}
.tabbar {
  background: #fff;
  position: fixed;
  width: 100vw;
  top: 0;
  border-bottom: 1px solid #f4f4f4;
}
.content {
  overflow: hidden;
}
.tab {
  display: inline-block;
  width: 50%;
  text-align: center;
  vertical-align: top;
}
.tab text {
  display: inline-block;
  line-height: 78rpx;
  font-size: 28.98rpx;
  position: relative;
}

.tab text.selected {
  font-size: 30.8rpx;
  font-weight: bold;
  color: #00c7d6;
}
.tab text.selected::after{
  content: "";
  display: block;
  position: absolute;
  height: 2px;
  width: 25px;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  background: #00c7d6;
  border-radius: 1px
}
.nav, .record {
  width: 688.88rpx; 
  margin: 124rpx auto;
}
.nav-item {
  background: #fff;
  padding: 35rpx;
  height: 140rpx;
  border-radius: 16.9rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.nav-item > image {
  position:absolute;
  height: 140rpx; 
  right: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}
.item-name {
  font-size: 36.23rpx;
  font-weight: 500;
}
.item-sub {
  font-size: 21.74rpx;
  color: #8D8D8D;
  margin-top: 9rpx;
  font-weight: 500;
}
.item-sub image {
  width: 19rpx;
  height: 19rpx;
}
.record-item {
  background: #fff;
  padding:  25rpx;
  /* height: 120rpx; */
  border-radius: 16.9rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.record-name {
  font-size: 30rpx;
  font-weight: 500;
  padding-bottom: 10rpx;
}
.record-data {
  font-size: 24rpx;
  color: #8D8D8D;
  line-height: 2;
  padding: 15rpx 0;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
  margin: 5rpx 0;
}
.record-toggle {
  position: absolute;
  right: 35rpx;
  top: 29rpx;
  color: #00c7d6;
  font-weight: 500;
  font-size: 24rpx;
}
.record-time {
  font-size: 21.74rpx;
  color: #8D8D8D;
  font-weight: 500;
  padding-top: 10rpx;
}
.record-data-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.record-data-list-item {
  width: 40%;
  display: flex;
  justify-content: space-between;
}