/* pages/me/bloodData/bloodData.wxss */
.container {
  min-height: 100vh;
  background: #f4f4f4;
}
.content {
  width: 200vw;
  display: flex;
  overflow: hidden;
  transition: all .3s ease;
}
.content.hide-left {
  transform: translateX(-50%);
}
.patient-link {
  font-size: 30rpx;
  font-weight: 500;
  line-height: 3;
  padding-left: 20rpx;
  display: inline-block;
  color: #00c7d6;
}
.patient-list, .patient-detail {
  width: 100vw; 
  margin: 35rpx 0 124rpx;
}

.patient-item {
  width: 688.88rpx; 
  background: #fff;
  padding:  25rpx;
  border-radius: 16.9rpx;
  margin: 0 auto 24rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.patient-item::after {
  content: "";
  display: block;
  position: absolute;
  right: 35rpx;
  top: 50%;
  width: 14rpx;
  height: 14rpx;
  border-right: 3rpx solid black;
  border-top: 3rpx solid black;
  transform: rotate(45deg) translateY(-50%);
  border-right-width: 1px;
  border-right-style: solid;
  border-right-color: black;
  border-top-width: 1px;
  border-top-style: solid;
  border-top-color: black;
}
.patient-name {
  font-size: 30rpx;
  font-weight: 500;
}
.patient-age, .patient-gender {
  font-size: 21.74rpx;
  color: #8D8D8D;
  font-weight: 500;
  padding-top: 10rpx;
  float: left;
  margin-right: 15rpx;
}

.detail {
  flex-direction: column-reverse;
}
.detail-item {
  display: flex;
  flex-direction: column-reverse;
  width: 688.88rpx;
  margin: auto;
}
.detail-record {
  background: #fff;
  padding:  25rpx;
  /* height: 120rpx; */
  border-radius: 16.9rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.detail-name {
  font-size: 30rpx;
  font-weight: 500;
  padding-bottom: 10rpx;
}
.detail-data {
  font-size: 24rpx;
  color: #8D8D8D;
  line-height: 2;
  padding: 15rpx 0;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
  margin: 5rpx 0;
}
.detail-toggle {
  position: absolute;
  right: 35rpx;
  top: 29rpx;
  color: #00c7d6;
  font-weight: 500;
  font-size: 24rpx;
}
.detail-time {
  font-size: 21.74rpx;
  color: #8D8D8D;
  font-weight: 500;
  padding-top: 10rpx;
}
.detail-data-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.detail-data-list-item {
  width: 40%;
  display: flex;
  justify-content: space-between;
}