/* pages/me/bloodData/bloodData.wxss */
.container {
  min-height: 100vh;
  background: #f4f4f4;
}
.content {
  overflow: hidden;
}
.patient-list, .patient-detail {
  width: 688.88rpx; 
  margin: 35rpx auto 124rpx;
  transition: all .3s ease;
}
.patient-list.hide-left {
  transform: translateX(-110%);
}
.patient-item {
  background: #fff;
  padding:  25rpx;
  border-radius: 16.9rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}
.patient-item::after {
  content: "";
  display: block;
  position: absolute;
  right: 35rpx;
  top: 50%;
  width: 14rpx;
  height: 14rpx;
  border-right: 3rpx solid black;
  border-top: 3rpx solid black;
  transform: rotate(45deg) translateY(-50%);
  border-right-width: 1px;
  border-right-style: solid;
  border-right-color: black;
  border-top-width: 1px;
  border-top-style: solid;
  border-top-color: black;
}
.patient-name {
  font-size: 30rpx;
  font-weight: 500;
}
.patient-age, .patient-gender {
  font-size: 21.74rpx;
  color: #8D8D8D;
  font-weight: 500;
  padding-top: 10rpx;
  float: left;
  margin-right: 15rpx;
}