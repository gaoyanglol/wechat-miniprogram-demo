.container {
  height: 100vh;
  background: #f8f8f8;
}
.nav-item {
  background: #fff;
  padding: 45rpx;
  height: 90rpx;
  border-radius: 16.9rpx;
  position: relative;
  border-bottom: 1px solid #f8f8f8;
}

.nav-item .item-name {
  font-size: 30rpx;
  font-weight: 600;
  padding-left: 150rpx;
  margin-bottom: 18rpx;
}
.nav-item .item-name .position {
  color: #fff;
  font-weight: 400;
  font-size: 24rpx;
  background: #8ae3ea;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.nav-item .item-sub {
  font-size: 24rpx;
  font-weight: 400;
  padding-left: 150rpx;
  overflow: hidden;
  color: #8D8D8D;
}
.nav-item .item-img {
  background: #8D8D8D;
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 60rpx;
  margin-right: 30rpx;
  overflow: hidden;
}
.item-img image {
  width: 100%;
  height: 100%;
}
